	"version": "0.2.0",
	"configurations": [
		{
			"name": "Python: Launch Server with Local Client",
			"type": "debugpy",
			"request": "launch",
			"program": "${workspaceFolder}/Source/_main.py",
			"cwd": "${workspaceFolder}",
			"args": [
				"server",
				"--run_client",
				"--verbose",
				"--user_code",
				"VisualPlugin",
			],
			"console": "integratedTerminal",
			"justMyCode": true
		},
		{
			"name": "Python: Launch Server with Local Client (Debug)",
			"type": "debugpy",
			"request": "launch",
			"program": "${workspaceFolder}/Source/_main.py",
			"cwd": "${workspaceFolder}",
			"args": [
				"server",
				"--run_client",
				"--verbose",
				"--debug",
				"--user_code",
				"VisualPlugin",
			],
			"console": "integratedTerminal",
			"justMyCode": true
		},
		{
			"name": "Python: Launch Server Only",
			"type": "debugpy",
			"request": "launch",
			"program": "${workspaceFolder}/Source/_main.py",
			"cwd": "${workspaceFolder}",
			"args": [
				"server",
				"--verbose",
			],
			"console": "integratedTerminal",
			"justMyCode": true
		},
		{
			"name": "Python: Launch Server Only (Debug)",
			"type": "debugpy",
			"request": "launch",
			"program": "${workspaceFolder}/Source/_main.py",
			"cwd": "${workspaceFolder}",
			"args": [
				"server",
				"--verbose",
				"--debug",
			],
			"console": "integratedTerminal",
			"justMyCode": true
		},
		{
			"name": "Python: Launch Client from Localhost",
			"type": "debugpy",
			"request": "launch",
			"program": "${workspaceFolder}/Source/_main.py",
			"cwd": "${workspaceFolder}",
			"args": [
				"player",
				"-wh",
				"localhost"
			],
			"console": "integratedTerminal",
			"justMyCode": true
		},
		{
			"name": "Python: Launch Client from IPv4 Address",
			"type": "debugpy",
			"request": "launch",
			"program": "${workspaceFolder}/Source/_main.py",
			"cwd": "${workspaceFolder}",
			"args": [
				"player",
				"-rh",
				"treatment-col.gl.at.ply.gg",
				"-rp",
				"56288",
				"-wp",
				"56829",
			],
			"console": "integratedTerminal",
			"justMyCode": true
		},
		{
			"name": "Python: Launch Client from IPv6 Address",
			"type": "debugpy",
			"request": "launch",
			"program": "${workspaceFolder}/Source/_main.py",
			"cwd": "${workspaceFolder}",
			"args": [
				"player",
				"-wh",
				"2607:fb91:1b74:d4d8:3dfb:5a51:55c3:d516",
				//"2603-8000-1-3a97-d421-214a-2471-ac0c.ipv6-literal.net",
			],
			"console": "integratedTerminal",
			"justMyCode": true
		},
	]
}